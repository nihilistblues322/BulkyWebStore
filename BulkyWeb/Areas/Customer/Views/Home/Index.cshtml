@model IEnumerable<Product>



<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card p-3 border-top border-5 rounded border-0 shadow">
                        <img src="@product.ImageUrl" class="card-img-top rounded" alt="">
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark text-uppercase text-center opacity-75">@product.Title</p>
                                <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark mb-0 text-center text-opacity-75">List Price: <span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></p>
                            </div>
                            <div class="pl-1">
                                <p class="text-dark text-center text-opacity-75">As low as: <span>@product.Price100.ToString("c")</span></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details"
                               asp-route-productId="@product.Id"
                               class="btn btn-primary bg-gradient form-control border-0">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>